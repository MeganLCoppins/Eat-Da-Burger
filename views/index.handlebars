<div class="container">
  {{!-- heading row  --}}
  <div class="row">
    <div class="col-md">
      <h1>Burgers!</h1>
    </div>
  </div>
  <div id="devoured">
    <div class="row">
      <div class="col-md">
        {{!-- form to add burger --}}
        <div id="center-form">
          <form class="create-form">
            <div class="form-group">
              <label for="bu">
                <h3>Burger Name: </h3>
              </label>
              <input type="text" id="bu" name="name">
            </div>
            <div class="form-group" id="newBurgers">
              <label for="devoured">
                <h3>This Burger is: </h3>
              </label>
              <div>
                <h5> Devoured! <input class="radioBtn" type="radio" name="devoured" value="1" checked></h5>
              </div>
              <div>
                <h5> Not Devoured <input class="radioBtn" type="radio" name="devoured" value="0"></h5>
              </div>
            </div>
            <button type="submit" id="addButton">Add Burger</button>
          </form>
        </div>
      </div>
    </div>
    <hr>
    {{!-- list of burgers --}}
    <div class="row" id="burgerList">
      <div class="col-md" id="dev">
        <h2>Devoured Burgers!</h2>
        <ul>
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block notdevoured=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
      <div class="col-md" id="notDev">
        <h2>Burgers Not Devoured!</h2>
        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block notdevoured=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>